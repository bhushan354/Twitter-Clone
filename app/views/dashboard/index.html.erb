<div class="container">
    <div class="row">
  
      <!-- Side bar -->
      <div class="col">
          <div class="d-flex align-items-center fs-4 mb-3"> 
              <span class="me-3 position-relative" style="bottom: 3px;">
                <%= image_tag "home.png", width: "25" %>
              </span> 
              Home
          </div>
  
          <%= link_to "Log out", destroy_user_session_path, data: {"turbo-method": :delete}, class: "btn btn-primary btn-lg w-100" %>
      </div>
  
      <!-- List of tweets -->
      <div class="col">
        <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true, class: 'mb-4' do |f| %>
          <div class="input-group mb-3">
            <%= f.text_field :body, class: 'form-control', placeholder: "What's happening?", aria: { label: 'Tweet' } %> 
            <div class="input-group-append">
              <%= f.submit "Tweet", class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
  
        
            <ul class="list-group">
              <% Tweet.includes(:user).each do |t| %>
                <li class="list-group-item">
                  <% if t.user %>
                    <strong><%= t.user.username %></strong>
                  <% else %>
                    <strong>Unknown User</strong>
                  <% end %>
          
                  <div><%= t.body %></div>
          
                  <div class="d-flex justify-content-between align-items-center mt-2">
                    <%= link_to 'View', tweet_path(t), class: 'btn btn-sm btn-light' %>
                    <%= link_to 'Edit', edit_tweet_path(t), class: 'btn btn-sm btn-secondary' %>
                    <%= link_to 'Delete', tweet_path(t), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>

                  </div>
                </li>
              <% end %>
            </ul>
        
          
      </div>
  
      <!-- fir search column will add later -->
      <div class="col">
        Column
      </div>
    </div>
  </div>
