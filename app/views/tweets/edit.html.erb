<h1>Edit Tweet</h1>
<%= form_with(model: @tweet, id: 'edit_tweet_form', local: true) do |form| %>
  <div>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>
  <div>
    <%= form.submit 'Update Tweet', class: 'btn btn-primary update-tweet-btn' %>
    <%= link_to 'Cancel', tweet_path(@tweet), class: 'btn btn-secondary' %>
  </div>
<% end %>