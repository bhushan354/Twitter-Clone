<div class="container mt-5">
    <h1>Edit Tweet</h1>
  
    <%= form_with(model: @tweet, id: 'edit_tweet_form', local: true, html: { class: 'mt-3' }) do |form| %>
      <div class="form-group">
        <!-- <%= form.label :Edit %> -->
        <%= form.text_field :body, class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= form.submit 'Update Tweet', class: 'btn btn-primary update-tweet-btn' %>
        <%= link_to 'Cancel', tweet_path(@tweet), class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
  