<li class="list-group-item">
    <div><%= tweet.body %></div>
    <div><strong>Created At:</strong> <%= tweet.created_at %></div>
    <div class="d-flex justify-content-between align-items-center mt-2">
      <%= link_to 'View', tweet_path(tweet), class: 'btn btn-sm btn-light' %>
      <%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-sm btn-secondary' %>
      <%= link_to 'Delete', tweet_path(tweet), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    </div>
  </li>