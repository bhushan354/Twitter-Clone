<%= form_with model: tweet, url: tweet.persisted? ? tweet_path(tweet) : tweets_path, method: tweet.persisted? ? :patch : :post, remote: true do |f| %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>

  <% if tweet.persisted? %>
    <div class="mb-3">
      <strong>Created At:</strong> <%= tweet.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
    </div>
  <% end %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
